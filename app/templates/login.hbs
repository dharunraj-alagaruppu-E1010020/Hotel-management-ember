<h1>Login here</h1>

<form onsubmit={{action 'login'}}>
  <label for="phone_number">Phone Number:</label>
  {{input type="number" id="phone" value=model.phone_number}}
  <br>
  <br>
  <label for="password">Password:</label>
  {{input type="password" id="password" value=model.password}}
  <br>
  <br>
  {{ role-select role_obj=model.roles selectedRoleId=model.role_id}} 

  <br>
  <button type="submit">Login</button>
  <br>
  <br>

  {{#link-to 'register'}}Go back to Register{{/link-to}}

</form>
